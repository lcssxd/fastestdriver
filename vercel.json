{
  "version": 2,
  "builds": [
    {
      "src": "server-middleware/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "nuxt.config.js",
      "use": "@nuxtjs/vercel-builder",
      "config": {
        "serverFiles": ["server-middleware/**"]
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server-middleware/index.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
