{
  "version": 2,
  "env": {
    "ON_VERCEL": "true"
  },
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "nuxt.config.js",
      "use": "@nuxtjs/vercel-builder",
      "config": {
        "serverFiles": ["server-middleware/**"]
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/send-email.js" },
    { "src": "/api", "dest": "api/send-email.js" },
    { "src": "/(.*)", "dest": "$1" }
  ]
}
